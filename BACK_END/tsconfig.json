{
    "compilerOptions": {
      "target": "ES6",                      // Cible de transpilation : ES6
      "module": "ES6",                      // Utilisation des modules ES6
      "rootDir": "./src",                   // Répertoire racine des fichiers source
      "outDir": "./dist",                   // Répertoire de sortie des fichiers transpilés
      "strict": true,                       // Activer les vérifications strictes de type
      "esModuleInterop": true,              // Activer l'interopérabilité avec les modules CommonJS
      "moduleResolution": "node",           // Type de résolution des modules
      "skipLibCheck": true,                 // Ignorer la vérification des types dans les fichiers de définition
      "forceConsistentCasingInFileNames": true, // Forcer la casse des noms de fichiers cohérente
      "resolveJsonModule": true,            // Permettre l'importation de modules JSON
      "allowSyntheticDefaultImports": true, // Permettre les importations par défaut synthétiques
      "allowJs": true,                      // Permettre la compilation des fichiers JavaScript
      "noEmit": false,                      // Émettre les fichiers transpilés
      "emitDeclarationOnly": false          // Ne pas émettre uniquement les déclarations de type
    },
    "include": [
      "src/**/*.ts"                         // Inclure tous les fichiers TypeScript dans le répertoire src
    ],
    "exclude": [
      "node_modules",                       // Exclure le répertoire node_modules
      "dist"                                // Exclure le répertoire dist
    ]
  }
  